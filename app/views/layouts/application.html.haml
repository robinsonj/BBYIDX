!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head{ :profile => "http://gmpg.org/xfn/1" }
    %title== #{BBYIDX::LONG_SITE_NAME} | #{h(page_title || "Exchange your ideas, vote, and discuss. Let's make it better.")}
    -cache 'header' do
      %link{ :href => "/favicon.ico", :rel => "icon", :type => "image/vnd.microsoft.icon" }
      %meta{ :content => 'text/html; charset=UTF-8', "http-equiv" => "Content-Type" }/
      %meta{ :name => 'keywords', :content => "#{BBYIDX::COMPANY_NAME}, #{BBYIDX::SHORT_SITE_NAME}, #{BBYIDX::LONG_SITE_NAME}, Idea Exchange, share, vote, rate"}
      %meta{ :name => 'description', :content => "#{BBYIDX::LONG_SITE_NAME} is a forum for #{BBYIDX::COMPANY_NAME} customers to share, rate, and discuss ideas about #{BBYIDX::COMPANY_NAME}."}
      
      -if BBYIDX::GOOGLE_WEBMASTER_KEY
        %meta{ :name => "verify-v1", :content => BBYIDX::GOOGLE_WEBMASTER_KEY }
      
      = stylesheet_link_tag 'master'
      /[if lt IE 8]
        = stylesheet_link_tag 'ie'
      /[if lt IE 7]
        = stylesheet_link_tag 'ie6'
        = javascript_include_tag 'IE7'
      = javascript_include_tag 'example_text'
      = javascript_include_tag :defaults
      = javascript_include_tag 'ga', 'global'
      = javascript_include_tag  'ga', 'global'
      - if BBYIDX::FACEBOOK_ENABLED
        = javascript_include_tag 'http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php'
      :javascript
        jQuery.noConflict(); // prevent jQuery from overriding $ operator, so that it doesn't fight with Prototype
    = csrf_meta_tag
    -@feeds.each do |feed|
      %link{ :href => feed[:href], :title => feed[:title], :rel => "alternate", :type => "application/rss+xml" }
    = javascript_include_tag 'map_ideas'
    -if @map
      %script(src='http://maps.google.com/maps/api/js?sensor=false' type='text/javascript')
  
  %body{ :class => @body_class }
    #wrap
      = render :partial => "shared/header"
      %hr.hide
      - unless @body_class == "home"
        = render :partial => "shared/share_your_idea"
      #content
        = render :partial => "shared/flash_messages"
        = yield
      
      -cache 'footer' do
        %hr.hide
        = render :partial => "shared/footer"
        -if BBYIDX::FACEBOOK_ENABLED
          = fb_connect_async_js
          :javascript
            facebook_auth = function(success_callback) {
              FB.login(
                function(response) {
                  if(response.session && success_callback)
                    success_callback()
                },
                { perms: 'email,publish_stream' })
            }
            facebook_login = function(callback_url) {
              facebook_auth(function() {
                window.location = callback_url || '#{create_facebook_session_url}'
              })
            }
        -if BBYIDX::GOOGLE_ANALYTICS_TRACKING_CODE
          :javascript
            var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
            document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
          :javascript
            try {
              var pageTracker = _gat._getTracker("#{GOOGLE_ANALYTICS_TRACKING_CODE}");
              pageTracker._trackPageview();
            } catch(err) {}
